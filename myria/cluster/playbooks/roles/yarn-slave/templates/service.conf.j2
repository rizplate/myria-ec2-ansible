description "yarn-slave"

start on (local-filesystems and net-device-up IFACE!=lo)
stop on [!2345]

setuid {{ hadoop_user }}

respawn
respawn limit unlimited

env SLEEP_TIME=30

pre-start script
    . {{ hadoop_home }}/env.sh
{% raw %}
    ${HADOOP_HOME}/sbin/hadoop-daemon.sh start datanode
    ${HADOOP_HOME}/sbin/yarn-daemon.sh start nodemanager
{% endraw %}
end script

# check for running processes since the daemon startup scripts exit after starting daemon
script
    while ((jps | grep -q DataNode) && (jps | grep -q NodeManager)); do
        sleep 5
    done
end script

post-stop script
    # sleep for configured interval between respawn attempts
    goal=`initctl status $UPSTART_JOB | awk '{print $2}' | cut -d '/' -f 1`
    if [ $goal != "stop" ]; then
        sleep $SLEEP_TIME
    fi

    . {{ hadoop_home }}/env.sh
{% raw %}
    ${HADOOP_HOME}/sbin/yarn-daemon.sh stop nodemanager
    ${HADOOP_HOME}/sbin/hadoop-daemon.sh stop datanode
{% endraw %}
end script
